<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.davidandres.calculadora.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/textView"
            android:layout_width="250sp"
            android:layout_height="match_parent"
            android:text="Calculadora de Promedios"
            android:textSize="21dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/buttonBorrarTodo"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:text="Borrador General"
            android:gravity="center"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>
    <!-- .......... Vista del 10% .......... -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewNota10"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:text="Nota EPR1"
            android:textSize="11dp"/>

        <EditText
            android:id="@+id/editTextIngreso10"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:ems="30"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:text=""
            android:maxLength="1"
            android:digits="01234567"
            android:hint="0"/>

        <TextView
            android:id="@+id/textViewPunto"
            android:layout_width="10sp"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="10dp"/>

        <EditText
            android:id="@+id/editTextIngresoDecimal"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:ems="30"
            android:gravity="center_horizontal"
            android:inputType="number"
            android:text=""
            android:maxLength="1"
            android:digits="0123456789"
            android:hint="0"/>

        <Button
            android:id="@+id/buttonBorrarNota"
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:backgroundTint="#BBDEFB"
            android:text=" 10 % " />

        <EditText
            android:id="@+id/editTextResul10"
            android:layout_width="80sp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:enabled="false"
            android:gravity="center_horizontal"
            android:hint="0"
            android:inputType="textPersonName"
            android:maxLength="4"
            android:text=""
            android:textColor="#303F9F"
            android:textStyle="bold"/>

    </LinearLayout>
